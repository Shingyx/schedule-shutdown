{
  "name": "schedule-shutdown",
  "version": "1.1.3",
  "description": "Schedules shutdowns for your computer",
  "repository": "https://github.com/Shingyx/schedule-shutdown",
  "license": "MIT",
  "author": "Su-Shing Chen",
  "files": [
    "dist/!(test)"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc",
    "build-test": "yarn build && yarn test",
    "clean": "rimraf dist",
    "format": "yarn tslint --fix && yarn prettier --write",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test",
    "prettier": "prettier --list-different \"src/**/*.ts\" \"*.md\"",
    "test": "nyc --reporter=text --reporter=lcov mocha --require source-map-support/register \"dist/**/*.test.js\"",
    "posttest": "yarn tslint && yarn prettier",
    "tslint": "tslint --project tsconfig.json"
  },
  "dependencies": {
    "tslib": "^1.9.3",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.11",
    "@types/sinon": "^7.0.0",
    "@types/yargs": "^12.0.1",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.9",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  }
